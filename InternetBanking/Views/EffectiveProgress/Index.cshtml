﻿@using InternetBanking.Core.Application.ViewModels.Payment.EffectiveProgress;
@using Microsoft.AspNetCore.Http;
@using InternetBanking.Core.Application.Helpers;
@using InternetBanking.Core.Application.Dtos.Account;
@inject IHttpContextAccessor httpContextAccessor
@model List<EffectiveProgressViewModel>
@{
    var User = httpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>("user");
    ViewData["Title"] = "Avance de Efectivo";
}

<div class="container-fluid">
    <div class="col-12 mt-5">
        <div class="d-flex justify-content-end mb-2">
            <a asp-controller="" asp-action="" class="btn text-white bg-gradient" style="background-color:#09385B; outline-color:#D3D9DE;">Agregar Beneficiario</a>
        </div>
        <div class="card">
            <div class="card-header" style="background-color:#09385B">
                <h3 class="text-light">@User.FirstName @User.LastName</h3>
                <h3 class="card-title text-light text-center">Avance de Efectivos Realizados</h3>
            </div>
            <div class="card-body">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>Tarjeta de Credito</th>
                            <th>Cuenta de Ahorro</th>
                            <th>Avance efectivo realizado</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (EffectiveProgressViewModel payments in Model)
                        {
                            <tr>
                                <td>@payments.OriginAccount</td>
                                <td>@payments.DestinationAccount</td>                 
                                <td>@payments.Amount</td>                 
                                <td>@payments.DateOfPaid</td>                 
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


