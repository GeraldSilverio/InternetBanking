@using InternetBanking.Core.Application.Dtos.Account;
@using InternetBanking.Core.Application.ViewModels.MoneyLoan;
@model NewMoneyLoanViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-12 d-flex justify-content-center align-items-center" style="min-height: 70vh;">
            <div class="col-6">
                <div class="card mt-3">
                    <div class="card-body mt-3">
                        <form class=" mb-3" method="post" asp-controller="MoneyLoan" asp-action="NewMoneyLoan">

                            <div class="mb-3">
                                <label>Seleccione el titular de la cuenta</label>
                                <select class="form-select" asp-for="IdUser" id="selectRole">
                                    @foreach (AuthenticationResponse user in ViewBag.Users)
                                    {
                                        <option value="@user.Id">@user.FirstName @user.LastName</option>
                                    }

                                </select>
                            </div>

                            <div class="mb-3">
                                <label>Monto a Prestar</label>
                                <input type="number" class="form-control" asp-for="BorrowedBalance" autocomplete="off">
                            </div>

                            <button type="submit" class="btn btn-outline-primary float-end ms-2">Asignar Prestamo</button>
                            <a class="btn btn-secondary float-end" asp-controller="SavingAccount" asp-action="SavingAccount">Volver</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>

    .card {
        border: 0.2px solid #09385B;
        border-radius: 4px 4px 10px 10px;
        box-shadow: 0 0 10px #6BA2CD;
    }

    label {
        color: #1B4A6F;
        font-size: 18px;
        font-weight: bold;
    }

    .input-blue {
        color: #1B4A6F;
        font-size: 18px;
        font-weight: bold;
    }

</style>


