@using InternetBanking.Core.Application.ViewModels.MoneyLoan;


@model List<MoneyLoanViewModel>

<div class="container-fluid">
    <div class="col-12 mt-5">
        <div class="d-flex justify-content-end mb-2">
            <a asp-controller="MoneyLoan" asp-action="NewMoneyLoan" class="btn text-white bg-gradient" style="background-color:#09385B; outline-color:#D3D9DE;">Nuevo Prestamo</a>
        </div>
        <div class="card">
            <div class="card-header" style="background-color:#09385B">
                <h3 class="card-title text-light text-center">PRESTAMOS EFECTUADOS</h3>
            </div>
            <div class="card-body">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>Titular del prestamo</th>
                            <th>Cedula</th>
                            <th>Numero del Prestamo</th>
                            <th>Balance</th>
                            <th>Monto Pagado</th>
                            <th>Deuda</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (MoneyLoanViewModel moneyLoan in Model)
                        {
                            <tr>
                                <td>@moneyLoan.UserFullName</td>
                                <td>@moneyLoan.UserIdentityCard</td>
                                <td>@moneyLoan.MoneyLoanCode</td>
                                <td>@moneyLoan.BorrowedBalance</td>
                                <td>@moneyLoan.BalancePaid</td>
                                <td>@moneyLoan.Debt</td>
                                @if (moneyLoan.Debt != 0)
                                {
                                    <td><b class="text-secondary">No se puede eliminar, aun debe dinero</b></td>
                                }
                                else
                                {
                                    <td>
                                        <a class="btn btn-danger" asp-controller="MoneyLoan" asp-action="DeleteMoneyLoan" asp-route-id="@moneyLoan.Id">Eliminar</a>
                                    </td>
                                }


                            </tr>
                        }



                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>