@using InternetBanking.Core.Application.ViewModels.SavingAccount;

@model List<SavingAccountViewModel>

<div class="container-fluid">
    <div class="col-12 mt-5">     
        <div class="card">

            <div class="card-header d-flex justify-content-between " style="background-color:#09385B">
                <form method="post" asp-controller="SavingAccount" asp-action="SavingAccount" class="d-flex align-items-cente ms-auto">
                    <div class="me-3">
                        <input type="text" class="form-control" id="filterName" name="IdentityCard" placeholder="Ingrese una Cédula">
                    </div>
                    <button type="submit" class="btn btn-outline-light">Filtrar por cedula</button>
                </form>
            </div>

            <div class="card-header" style="background-color:#09385B">
                <h3 class="card-title text-light text-center">CUENTAS DE AHORROS DEL SISTEMA</h3>
            </div>
            <div class="card-body">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>Titular de la Cuenta</th>
                            <th>Cedula</th>
                            <th>Numero Cuenta</th>
                            <th>Balance</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (SavingAccountViewModel account in Model)
                        {
                            <tr>
                                <td>@account.FullName</td>
                                <td>@account.IdentityCard</td>
                                <td>@account.AccountCode</td>
                                <td>$@account.Balance</td>
                                <td>
                                    @if (account.IsPrincial != true)
                                    {
                                        <a class="btn btn-outline-danger" asp-controller="SavingAccount" asp-action="DeleteAccount" asp-route-id="@account.Id">Eliminar</a>
                                    }
                                    else
                                    {
                                        <b class="text-secondary">Cuenta Principal</b>
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
